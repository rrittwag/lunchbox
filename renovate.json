{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ignorePaths": ["**/node_modules/**", "backend-play-akka-scala/**", "frontend-web-angularjs/**"],
  "packageRules": [
    {
      "groupName": "app patches",
      "matchPaths": ["app/**"],
      "matchUpdateTypes": ["minor", "patch", "digest"]
    },
    {
      "groupName": "backend patches",
      "matchPaths": ["backend-spring-kotlin/**"],
      "matchUpdateTypes": ["minor", "patch", "digest"]
    },
    {
      "groupName": "frontend patches",
      "matchPaths": ["frontend-web-vue/**"],
      "matchUpdateTypes": ["minor", "patch", "digest"]
    }
  ],
  "extends": ["config:base"]
}
